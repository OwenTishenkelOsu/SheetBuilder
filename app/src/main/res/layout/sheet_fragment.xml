<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold|italic"
        android:textColor="@color/light_brown"
        android:textSize="24sp"
        android:padding="4dp"
        android:text="Sheet title"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--<EditText
            android:id="@+id/template_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:hint="Template Name"
            android:maxLines="1"
            android:minHeight="48dp"
            android:textColorHint="#546E7A"/>-->

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="Orientation">

        </ScrollView>

        <LinearLayout
            android:id="@+id/list"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"/>


        <ImageView
            android:id="@+id/add_element_button"
            android:layout_width="231dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/add_element_btn" />

        <ImageView
            android:id="@+id/delete_element_button"
            android:layout_width="231dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/delete_selected_btn" />

        <ImageView
            android:id="@+id/save_sheet_button"
            android:layout_width="231dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/save_sheet_btn" />

        <ImageView
            android:id="@+id/voice_button"
            android:layout_width="231dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/speech_to_text_btn" />

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="231dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/back_btn" />

    </LinearLayout>
</LinearLayout>